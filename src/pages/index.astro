---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Hero from "~/components/Hero.astro";
import { Picture, Image } from "astro:assets";
import Badge from "~/components/Badge.astro";
import Button from "~/components/Button.astro";
import ButtonCallUs from "~/components/ButtonCallUs.astro";
import Grid from "~/components/Grid.astro";
import Heading from "~/components/Heading.astro";
import WideImage from "~/components/WideImage.astro";
import { address, phone, email, hours, default_image } from "~/data/config";

// Images
import panConChicharron from "~/assets/images/panConChicharron.png";
import carapulcra from "~/assets/images/carapulcra.jpg";
import chicharron from "~/assets/images/chicharron.jpg";
import tamales from "~/assets/images/tamales.jpg";
import food from "~/assets/images/food.jpg";
import rosa from "~/assets/images/rosa.jpeg";
import Dessert from "~/assets/images/dessert.png";
---

<Layout title="Rosi Peruvian Catering & Homemade Meals in Orlando, FL" pageTitle="Rosi Peruvian Catering & Homemade Meals in Orlando, FL" description="Authentic Peruvian lunch and dinner catering in Orlando, FL. Perfect for family gatherings, events, and parties. Only pickup & delivery." image={default_image}>
	<Section>
		<Hero>
			<div slot="hero-content-left" class="prose max-w-none max-lg:order-1">
				<Badge title="Rosi Peruvian Buffet" />
				<h1 class="font-black">Sabor Peruano Hecho en Casa</h1>

				<p>
					Peruvian Buffet & Snacks for Every Occasion ‚Äî whether you're planning a family gathering, a 
					birthday, or just craving homemade Peruvian flavors, Rosa‚Äôs kitchen brings tradition and 
					heart to your table.
				</p>

				<span class="text-peru font-medium"> Only Pickup &amp;  Delivery </span>

				<div class="mt-8 flex items-center gap-x-8">
					<Button url="/menu">See our Menu</Button>
					<ButtonCallUs />
				</div>
			</div>
			<div slot="hero-content-right">
				<Picture
					class="mx-auto"
					src={panConChicharron}
					height={600}
					formats={["avif", "webp"]}
					alt="Pan con chicharr√≥n, a traditional Peruvian pork sandwich with sweet potato and salsa criolla, held on a colorful street in Lima, Peru"
					loading={"eager"}
					fetchpriority={"high"}
				/>
			</div>
		</Hero>
	</Section>

	<WideImage image={food} alt="Three plates of gourmet Peruvian dishes served on a rustic wooden table, featuring grilled steak with lettuce and red onions, crispy croquettes with herbs, and a nut-crusted meat salad with cashews and chili peppers" class:list={"aspect-video lg:aspect-[16/6]"} />

	<Section class:list={"bg-white"}>
		<Heading>
			<h2 slot="heading-title" class="font-black text-brand-green h2">House Specialities</h2>
			<p slot="heading-content">
				üáµüá™ Explore Our Selection of Authentic Peruvian Dishes</p>
		</Heading>

		<Grid>
			<div slot="grid-content-1">
				<div class="flex flex-col items-center prose text-center">
					<Picture
						class:list={"not-prose w-full h-auto"}
						src={tamales}
						formats={["avif", "webp"]}
						alt="Traditional Peruvian tamales wrapped in banana leaves, filled with seasoned pork and corn dough, served with salsa criolla"
					/>
					<h3 class="h4 mt-0 font-black">Tamales</h3>
					<p>
						Steamed corn dough with flavorful pork or chicken, wrapped in banana leaves and served with fresh salsa criolla.

					</p>
				</div>
			</div>

			<div slot="grid-content-2">
				<div class="flex flex-col items-center prose text-center">
					<Picture
						class:list={"not-prose w-full h-auto"}
						src={carapulcra}
						formats={["avif", "webp"]}
						alt="Authentic Peruvian carapulcra, a traditional stew made with dried potatoes, pork, and rich peanut sauce, garnished with rice."
					/>
					<h3 class="h4 mt-0 font-black">Carapulcra</h3>
					<p>
						A rich and comforting stew made with sun-dried potatoes, pork, and a savory peanut-chili blend ‚Äî a timeless Andean favorite.					
					</p>
				</div>
			</div>

			<div slot="grid-content-3">
				<div class="flex flex-col items-center prose text-center">
					<Picture
						class:list={"not-prose w-full h-auto"}
						src={chicharron}
						formats={["avif", "webp"]}
						alt="Peruvian-style chicharr√≥n, crispy fried pork belly served with sweet potato and pickled red onions"
					/>
					<h3 class="h4 mt-0 font-black">Chicharron</h3>
					<p>
						Crispy, juicy fried pork belly served with sweet potatoes and marinated red onions ‚Äî a street food classic with bold flavor.
					</p>
				</div>
			</div>
		</Grid>
		<div class="mt-8 flex items-center  justify-center text-center">
			<Button url="/menu">See our Menu</Button>
		</div>
	</Section>

				

	<!-- My Story -->
	<Section class:list={"bg-brand-red/20 relative"}>
		<div class="py-16">
			<Hero>
				<div slot="hero-content-left" class="prose max-w-none max-lg:order-1">
					<Badge color="peru" title="Hi There!" />
					<h2 class="font-black h2 my-4">My Story</h2>
	
					<p>
						Rosa is a Peruvian cook who has always loved being in the kitchen. She learned everything from her mother and has spent years perfecting her food. Today, she runs a small family business where she cooks with love, mixing traditional flavors with new ideas. Every plate she makes is full of heart and made to be shared.
					</p>
	
				
				</div>
				<div slot="hero-content-right">
					<Picture
						class:list={"mx-auto rounded-full  w-80 h-80  object-cover shadow-lg"}
						src={rosa}
						formats={["avif", "webp"]}
						alt="Rosa, the Peruvian cook and founder of Rosi Peruvian Catering, smiling proudly in her kitchen while preparing traditional homemade dishes"
					/>
				</div>
			</Hero>
		</div>

		<svg
			xmlns="http://www.w3.org/2000/svg"
			viewBox="0 0 1440 320"
			class="absolute h-40 w-full top-0 inset-x-0 rotate-180"
			preserveAspectRatio="none"
			><path
				fill="#ffffff"
				fill-opacity="1"
				d="M0,288L48,272C96,256,192,224,288,197.3C384,171,480,149,576,165.3C672,181,768,235,864,250.7C960,267,1056,245,1152,250.7C1248,256,1344,288,1392,304L1440,320L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
			></path>
		</svg>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			viewBox="0 0 1440 320"
			class="absolute h-40 w-full bottom-0 inset-x-0"
			preserveAspectRatio="none"
			><path
				fill="#ffffff"
				fill-opacity="1"
				d="M0,288L48,272C96,256,192,224,288,197.3C384,171,480,149,576,165.3C672,181,768,235,864,250.7C960,267,1056,245,1152,250.7C1248,256,1344,288,1392,304L1440,320L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
			></path>
		</svg>
	</Section>

	<!--Our Services -->
	<Section class="bg-white">
		<div class="prose max-w-none mb-12">
		  <Badge title="Services" />
		  <h2 class="font-black text-brand-green mt-2">Our Services</h2>
		
		</div>
	  
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
		  <!-- Catering Card -->
		  <div class="bg-brand-pink/10 rounded-2xl shadow-md p-8 flex flex-col justify-between">
			<div>
			  <h3 class="font-black text-brand-green text-2xl mt-2">Peruvian Catering</h3>
			  <p class="mt-4 text-gray-700">
				From birthdays and family gatherings to corporate lunches and private events, our catering service delivers authentic Peruvian dishes your guests will love.
			  </p>
			  <p class="mt-2 text-gray-700">
				Full buffets, snacks, and professional delivery available.
			  </p>
			</div>
			<div class="mt-6">
			  <Button url="/menu">Explore Catering</Button>
			</div>
		  </div>
	  
		  <!-- Lunch & Dinner Card -->
		  <div class="bg-white rounded-2xl shadow-md p-8 flex flex-col justify-between">
			<div>
			  <h3 class="font-black text-brand-green text-2xl mt-2">Lunch & Dinner Pickup</h3>
			  <p class="mt-4 text-gray-700">
				Enjoy ready-to-serve Peruvian meals like lomo saltado, aj√≠ de gallina, or arroz chaufa ‚Äî perfect for busy weekdays or casual comfort food cravings.
			  </p>
			  <p class="mt-2 text-gray-700">
				Fresh, homemade dishes available for daily pickup.
			  </p>
			</div>
			<div class="mt-6">
			  <Button url="/menu">Order Now</Button>
			</div>
		  </div>
		</div>
	  </Section>
	  

	<!-- Contact -->
	<Section class:list={"bg-white"}>
		<Hero>
			<div slot="hero-content-left" class="prose max-w-none">
				<Badge color="peru" title="Contact" />
				<h2 slot="heading-title" class="font-black text-brand-peru h2 my-4">Contact us</h2>
				<p >Only Pickup & Delivery</p>
				<div slot="heading-content">
					<p>
						Have questions or ready to place an order? We're here to help! Whether you're planning an event or picking up lunch or dinner, contact us to enjoy authentic Peruvian food made with love.
					</p>

					<div class="mt-6 space-y-3">
						<p><strong>üìç Address:</strong> {address}</p>
						<p><strong>üìû Phone:</strong> <a href="tel:+14071234567" class="text-brand-green">{phone.label}</a></p>
						<p><strong>üìß Email:</strong> <a href="mailto:info@rosicatering.com" class="text-brand-green">{email.label}</a></p>
						<p><strong>üïí Hours:</strong> {hours}</p>
					  </div>

					<div class="mt-8">
						<Button color="red" url="/contact">Contact us</Button>
					</div>
				</div>
			</div>

			<div slot="hero-content-right">
				<Picture
					class:list={"mx-auto"}
					src={Dessert}
					height={600}
					formats={["avif", "webp"]}
					alt="A description of my image."
				/>
			</div>
		</Hero>
	</Section>
</Layout>
